<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="多功能数字签名"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_height="80dp">
    </TextView>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <TextView
            android:text="私钥文件(.pri)"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/prikey_spi"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="未选择"
                android:layout_height="match_parent">
            </Spinner>
            <Button
                android:id="@+id/key_manager_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginLeft="5dp"
                android:text="密钥创建">
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <TextView
            android:text="源文件（待签名文件）"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/srcfile_txv"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="未选择"
                android:layout_height="match_parent">
            </TextView>
            <Button
                android:id="@+id/srcfile_select_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginLeft="5dp"
                android:text="浏览">
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <TextView
            android:text="签名摘要类型"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </TextView>
        <RadioGroup
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/abstract_type_radiogroup"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/md5_rb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="MD5"
                android:layout_height="match_parent">
            </RadioButton>
            <RadioButton
                android:id="@+id/sha1_rb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="SHA1"
                android:layout_height="match_parent">
            </RadioButton>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <TextView
            android:text="生成独立签名文件"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/sign_name_edt"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:hint="文件名（.dsg）"
                android:layout_height="match_parent">
            </EditText>
            <Button
                android:id="@+id/signfile_generate_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="生成">
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <TextView
            android:text="追加签名在源文件末尾"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/sign_newfilename_edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:hint="新文件名(.apd)"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/sign_newfile_generate_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="生成">
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>